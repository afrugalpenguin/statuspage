{
  "name": "statuspage",
  "version": "1.0.0",
  "description": "Ultra-lightweight status page widget",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:html",
    "build:html": "node scripts/build-html.js",
    "preview": "vite preview",
    "start": "node --import tsx server/index.ts",
    "server": "tsx server/index.ts",
    "server:dev": "tsx watch server/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "preact": "^10.19.3",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.2",
    "@testing-library/preact": "^3.2.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "jsdom": "^27.3.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18"
  }
}
